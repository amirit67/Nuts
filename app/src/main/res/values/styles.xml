    <style name="ProfileItem">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:background">@drawable/profile_press_items</item>
        <item name="android:clickable">true</item>
        <item name="android:padding">12dp</item>
        <item name="android:gravity">right|center_vertical</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:drawableLeft">@drawable/ic_chevron_left_gray</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/iransansmedium</item>
    </style>

    <style name="CustomTabLayout"  parent="@android:style/TextAppearance.Small">

        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>

    </style>
    <style name="CustomTabLayout1" parent="Widget.Design.TabLayout">
        <item name="tabBackground">@drawable/tab_color_selector</item>
    </style>


    <style name="TextInputLayoutAppearance" parent="Widget.Design.TextInputLayout">
        <item name="android:background">#fff</item>
        <item name="android:textColorHint">#c5c5c5</item>
        <item name="errorTextAppearance">@style/hint_error</item>
        <item name="android:textColor">@android:color/black</item>

    </style>

    <style name="tabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
    </style>
</resources>
